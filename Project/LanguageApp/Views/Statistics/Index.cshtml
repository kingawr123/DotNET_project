@model IEnumerable<LanguageApp.Models.Statistics>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuizCounter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuizCounter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AverageScore)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StatisticsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StatisticsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StatisticsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
